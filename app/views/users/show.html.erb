
<div id = "profile_head">
  <div  id = 'profile_username'>
  <h2><%=@user.first_name%> <%=@user.last_name%></h2>
  </div>
</div>
<% if @user.user_image_url.file %>
  <%= image_tag(@user.user_image_url, class: 'profile_picture') %>
<% else %>
  <%= image_tag("no-image.jpg", class: 'profile_picture') %>
<% end %>

<div id='edit_link'>
  <%= link_to "Edit Profile", edit_user_path %>
</div>
<div class='my_scores'>
  <h3>My Scores</h3>
<div class = 'add_score'>
<%= link_to "Add a new score", new_score_path %>
</div>
<ul>
  <% @user.scores.each do |score| %>
  <li><span class = 'score_title'><%= link_to "#{score.title}", score_path(score) %></span><span class = 'composer'><%= link_to "#{score.composer}", score_path(score) %></span><span class = 'thumbnail'><%= link_to image_tag(score.original_image.url), score_path(score)%></span> </li>
  <% end %>
</ul>
</div>


